						@Html.TextAreaFor(model => model.CategoryName, new { @class = "form-control", placeholder = "Enter Category Name", required = "required", autofocus = "autofocus", @rows = "1" })
						@Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
