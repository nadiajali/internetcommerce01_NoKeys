@model IEnumerable<internetcommerce01.DAL.Tbl_Product>

@{
	ViewBag.Title = "Product";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
	<h1 class="mt-4">@*Tables*@</h1>
	<ol class="breadcrumb mb-4">
		<li class="breadcrumb-item"><a href="../Admin/Dashboard">Dashboard</a></li>
		<li class="breadcrumb-item active">Products</li>
	</ol>
	<div class="card mb-4">
		<div class="card-header">
			<i class="fas fa-table mr-1"></i>
			Products
			<a href="../Admin/ProductAdd" class="btn btn-info pull-right"><i class="fa fa-plus"></i>&nbsp;Add New</a>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>#</th>
							<th>Product Name</th>
							<th>Action</th>
						</tr>
					</thead>
					<tfoot>
						<tr>
							<th>#</th>
							<th>Product Name</th>
							<th>Action</th>
						</tr>
					</tfoot>
					<tbody>
						@{ int count = 1; }
						@foreach (var item in Model)
						{							
							<tr>
								<td>@count</td>
								<td>@item.ProductName</td>
								<td>
									@Html.ActionLink("Edit", "ProductEdit", new { productID = item.ProductID })
								</td>
							</tr>
							count++;
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
