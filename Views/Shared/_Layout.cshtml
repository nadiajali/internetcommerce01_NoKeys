@using internetcommerce01.Models.Home;

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@*@Styles.Render("~/Content/css")*@
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/MyMainLayout.css" rel="stylesheet" />
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="container" style="width:1130px;">
		<div class="row">
			<div class="col-md-6 col-sm-6 col-xs-6">
				<div class="logo">
					<h1><a href="@Url.Action("Index", "Home")" style="text-decoration:none;" onmouseover="this.style.color='#333'">TREK</a></h1>
				</div>
			</div>
			<div class="col-md-6 col-sm-6 col-xs-6">
				@*<div class="account">
						<ul>
							<li style="border-right:none;">
								<div class="hidden-xs">
									<h4><a>Call</a></h4>
									<p>###-###-####</p>
								</div>
								<div class="visible-xs">
									<p>###-###-####</p>
								</div>
							</li>
						</ul>
					</div>*@
				<ul class="nav navbar-nav navbar-right">
					<li class="dropdown">
						<a data-toggle="dropdown" class="dropdown-toggle" href="#">Cart<b class="caret"></b></a>
						<ul class="dropdown-menu">
							@if (Session["cart"] != null)
							{
								foreach (var item in (List<Item>)Session["cart"])
								{
									<li><a href="@Url.Action("RemoveFromCart","Home",new { productID=item.Product.ProductID })">@item.Product.ProductName (@item.Quantity) <i class="fa fa-times"></i></a></li>
								}
							}
							<li class="divider"></li>
							<li><a href="@Url.Action("CheckoutDetails", "Home")">Go to Cart</a></li>
						</ul>
					</li>
				</ul>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="nav-menus">
					@*<ul class="nav nav-pills">
						<li class="active"><a href="#" style="border-radius:inherit;">Home</a></li>
						<li><a href="#" style="border-radius:inherit;">Location</a></li>
						<li><a href="#" style="border-radius:inherit;">About</a></li>
					</ul>*@
				</div>
			</div>
		</div>
		@RenderBody()
		<hr />
		<footer>
			<div class="row">
				<div class="col-md-12 copyright">
					<div class="col-md-6 col-sm-6 copyright-left">
						<p>&copy; @DateTime.Now.Year - TREK</p>
					</div>
					<div class="col-md-6 col-sm-6 copyright-right">
						<ul class="list-unstyled list-social">
							<li><a href="https://www.youtube.com/user/trekbikesusa" target="_blank" style="border:none;"><i class="fa fa-youtube"></i></a></li>
							<li><a href="https://www.facebook.com/TrekBicycle" target="_blank" style="border:none;"><i class="fa fa-facebook-square"></i></a></li>
							<li><a href="https://www.instagram.com/trekbikes" target="_blank" style="border:none;"><i class="fa fa-instagram"></i></a></li>
							<li><a href="https://twitter.com/TrekBikes" target="_blank" style="border:none;"><i class="fa fa-twitter-square"></i></a></li>
						</ul>
					</div>
				</div>
			</div>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
